<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Progress</title>

    <!-- font awesome cdn link  -->
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">

   <!-- custom css file link  -->
   <link rel="stylesheet" href="/public/styles.css">
   <link rel="stylesheet" href="/public/progress.css">
</head>
<body>

    <%- include ('header') %>

    <section class="progress">

        <h1 class="heading">Progress</h1>

        <div class="details">
            <div class="user">
                <img src="/images/pic-1.jpg" alt="">
                <h3><%= name %></h3>
                <p>student</p>
            </div>
        

            <div class="box-container">
            
                <div class="box">
                    <div class="flex">
                    <h3>Biology</h3>
                    </div>
                    <p class="score">Quiz Score: <%= biologyScore %></p>
                </div>

                <div class="box">
                    <div class="flex">
                    <h3>Chimistry</h3>
                    </div>
                    <p class="score">Quiz Score: <%= chemistryScore %></p>
                </div>

                <div class="box">
                    <div class="flex">
                    <h3>Physics</h3>
                    </div>
                    <p class="score">Quiz Score: <%= physicsScore %></p>
                </div>

                <a href="progress_report" class="inline-btn">View Progress Report</a>


            </div>

        </div>
    </section>

    <%- include ('footer') %>
    <script src="/app.js"></script>
    <!-- <script src="/script.js"></script> -->
</body>
</html>