<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>

    <!-- font awesome cdn link  -->
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">

   <!-- custom css file link  -->
   <link rel="stylesheet" href="/public/styles.css">
   <link rel="stylesheet" href="/public/profile.css">
</head>
<body>

    <%- include ('header') %>

    <section class="profile">

        <h1 class="heading">Profile Details</h1>

        <div class="details">
            <div class="user">
                <% if (userImage === 'm') { %>
                    <img src="/images/users/m_user.png" alt="Male Profile Image">
                <% } else { %>
                    <img src="/images/users/f_user.png" alt="Female Profile Image">
                <% } %>
                <h3><%= name %></h3>
                <p>student</p>
                <p><%= email %></p>
                <p class="login_streak">Login Streak: <%= loginStreak %> day(s)</p>
                <a href="update_profile" class="inline-btn">update profile</a>
            </div>
        
            <h1 class="heading">Medals</h1>

            <div class="box-container">
            
                <% rowdata.forEach((subject) => { %>
                    <div class="box" data-subject-id="<%= subject.id %>">
                        <h1 class="sub_name"><%= subject.name %> Medal</h1>
                        <% if (subject.score >= subject.maxScore) { %>
                            <!-- Display unlocked badge if score equals or exceeds max score -->
                            <img src="<%= subject.unlockedBadge %>" alt="Unlocked Badge" class="achievement_badge">
                            <!-- used to  -->
                            <p class="unlocked_text">Get <%= subject.maxScore %> / <%= subject.maxScore %> in the quiz to unlock medal</p>
                        <% } else { %>
                            <!-- Display locked badge by default -->
                            <img src="<%= subject.lockedBadge %>" alt="Locked Badge" class="achievement_badge">
                            <p>Get <%= subject.maxScore %> / <%= subject.maxScore %> in the quiz to unlock medal</p>
                        <% } %>
                        <a href="/subject_progress/<%= subject.name %>" class="inline-btn">View Progress</a>
                    </div>
                <% }) %>
    </section>

    <%- include ('footer') %>
    <script src="/app.js"></script>
</body>
</html>